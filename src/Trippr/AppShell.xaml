<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="Trippr.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:Trippr.Views"
	xmlns:local="clr-namespace:Trippr">

	<TabBar>
		<ShellContent
			Title="Places"
			Icon="iconlistdetail.png"
			ContentTemplate="{DataTemplate views:ListDetailPage}" />
		<ShellContent
			Title="Map"
			Icon="iconmap.png"
			ContentTemplate="{DataTemplate views:MapPage}" />
		<ShellContent
			Title="Trips"
			Icon="iconwebview.png"
			ContentTemplate="{DataTemplate views:TripPage}" />
		<ShellContent
			Title="Marker"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:WebViewPage}" />
		<ShellContent
			Title="Localization"
			Icon="iconlocalization.png"
			ContentTemplate="{DataTemplate views:LocalizationPage}" />
		<ShellContent
			Title="Sample"
			Icon="iconsample.png"
			ContentTemplate="{DataTemplate views:SamplePage}" />
	</TabBar>
</Shell>
